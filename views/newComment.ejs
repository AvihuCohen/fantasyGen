<div class="row">
    <div id="commentContainer" class="container mt-5 p-4">
        <h1>Add new comment:</h1>

        <form action="/articles/<%=articleID%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="comment">
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Add comment</button>
            </div>
        </form>
    </div>
</div>

