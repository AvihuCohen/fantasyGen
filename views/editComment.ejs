<% include partials/header %>


<div class="row">
    <div id="commentContainer" class="container mt-5 p-4">
        <h1>Edit comment:</h1>

        <form action="/articles/<%= articleID %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Edit comment</button>
            </div>
        </form>
    </div>
</div>

