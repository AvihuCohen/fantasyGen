<% include partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/landingPage.css">


<div id="landingBody" class="mx-0 h-100">


    <div class="row landingRow h-100 w-100">
        <div id="landingLeft" class="col-3 pt-5 border-right">
            <div id="topPlayers" class="list-group mt-3 px-1 ml-3">
                <li class="list-group-item list-group-item-secondary">Top 5 captains:</li>
                <% for(var i = 1; i <= 5; i++) { %>
                    <li class="list-group-item list-group-item list-group-item-primary topPlayersTable p-1">
                        <%= i %>. <img class="topCaptainsImage"
                                       src="<%= topPlayers[i - 1].imageURL %>"><%= topPlayers[i - 1].name %>
                    </li>
                <% } %>
            </div>
        </div>

        <div class="col">
            <div class="row d-flex justify-content-center">
                <div id="landingJumbo" class="jumbotron jumbotron-fluid text-center p-0 ">
                    <div class="container">
                        <h1 class="display-4">Welcome to Fantasy Generator!</h1>
                        <p class="lead">The ultimate place for English Premier League Football Fantasy player!</p>
                    </div>
                </div>
            </div>


            <div id="articles" class="row d-flex justify-content-around">

                <% for (var i = articles.length; i >= articles.length-4; i--) { %>
                    <% if(articles[i]) { %>

                        <div class="col-5 m-1 p-1">
                            <div class="card m-3" style="width: 20rem;">
                                <img src="<%= articles[i].image %>" class="card-img-top">
                                <div class="card-body">
                                    <a href="/articles/<%= articles[i]._id %>"><h5 class="card-title "><%= articles[i].title %></h5></a>
                                    <p class="card-text"><%= articles[i].content.slice(1,50) %>...</p>
                                </div>
                            </div>
                        </div>

                    <% } %>
                <% } %>

            </div>

        </div>

        <!--<div id="landingRight" class="col-2 border-left">-->

        <!--</div>-->
    </div>
</div>


<% include partials/footer %>


